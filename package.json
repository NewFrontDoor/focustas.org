{
  "name": "focustas.org",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "gulp compose",
    "start": "gulp",
    "test": "xo && nyc ava",
    "test:watch": "ava --watch",
    "precommit": "lint-staged",
    "report-coverage": "nyc report --reporter=lcov > coverage.lcov && codecov"
  },
  "dependencies": {
    "@babel/core": "^7.5.5",
    "@emotion/core": "^10.0.16",
    "@emotion/is-prop-valid": "^0.8.2",
    "@emotion/styled": "^10.0.15",
    "apollo-cache-inmemory": "^1.6.3",
    "apollo-client": "^2.6.4",
    "apollo-link-http": "^1.5.15",
    "autotrack": "^2.4.1",
    "classnames": "^2.2.6",
    "config": "^3.2.2",
    "connect-mongo": "^2.0.3",
    "dotenv": "^8.0.0",
    "emotion-theming": "^10.0.14",
    "execa": "^2.0.4",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.4.2",
    "graphql-compose": "^7.3.0",
    "graphql-compose-connection": "^6.0.3",
    "graphql-compose-mongoose": "^7.1.3",
    "graphql-tag": "^2.10.1",
    "isomorphic-fetch": "^2.2.1",
    "keystone": "^4.2.1",
    "keystone-storage-adapter-s3": "^2.0.0",
    "lodash": "^4.17.15",
    "mineral-ui": "^0.58.0",
    "model-transform": "^2.0.0",
    "next": "^9.0.3",
    "now-env": "^3.2.0",
    "pino-colada": "^1.4.5",
    "pino-http": "^4.2.0",
    "polished": "^3.4.1",
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
    "react-apollo": "^3.0.1",
    "react-dom": "^16.9.0",
    "react-scroll": "^1.7.13",
    "typeface-raleway": "0.0.75",
    "typography": "^0.16.19"
  },
  "devDependencies": {
    "acorn": "^7.0.0",
    "acorn-dynamic-import": "^4.0.0",
    "ava": "^2.2.0",
    "babel-eslint": "^10.0.2",
    "codecov": "^3.5.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-config-xo-react": "^0.20.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "gulp": "^4.0.2",
    "gulp-execa": "^1.0.1",
    "gulp-nodemon": "^2.4.2",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.3",
    "mongomem": "^0.1.9",
    "nyc": "^14.1.1",
    "wait-for-localhost": "^3.2.0",
    "xo": "^0.24.0"
  },
  "xo": {
    "extends": [
      "xo-react"
    ],
    "space": true,
    "prettier": true,
    "parser": "babel-eslint",
    "overrides": [
      {
        "files": "models/*.js",
        "rules": {
          "unicorn/filename-case": [
            "error",
            {
              "case": "pascalCase"
            }
          ]
        }
      },
      {
        "files": "components/*.js",
        "globals": [
          "ga"
        ]
      }
    ]
  },
  "lint-staged": {
    "*.{js}": [
      "npx xo --fix",
      "git add"
    ]
  }
}
