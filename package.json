{
  "name": "focustas.org",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "flow": "flow",
    "dev": "node app.js",
    "build": "next build",
    "start": "NODE_ENV=production node index.js",
    "test": "xo && nyc ava",
    "test:watch": "ava --watch",
    "precommit": "lint-staged",
    "report-coverage": "nyc report --reporter=lcov > coverage.lcov && codecov"
  },
  "dependencies": {
    "@babel/core": "^7.4.3",
    "@emotion/core": "^10.0.10",
    "@emotion/is-prop-valid": "^0.7.3",
    "@emotion/styled": "^10.0.10",
    "apollo-cache-inmemory": "^1.5.1",
    "apollo-client": "^2.5.1",
    "apollo-link-http": "^1.5.14",
    "autotrack": "^2.4.1",
    "classnames": "^2.2.6",
    "config": "^3.1.0",
    "emotion-theming": "^10.0.10",
    "express": "^4.16.4",
    "express-graphql": "^0.8.0",
    "graphql": "^14.2.1",
    "graphql-compose": "^6.3.2",
    "graphql-compose-connection": "^5.0.0",
    "graphql-compose-mongoose": "^6.1.0",
    "graphql-tag": "^2.10.1",
    "isomorphic-fetch": "^2.2.1",
    "keystone": "^4.0.0",
    "keystone-storage-adapter-s3": "^2.0.0",
    "lodash": "^4.17.11",
    "mineral-ui": "^0.58.0",
    "model-transform": "^2.0.0",
    "next": "^8.1.0",
    "now-env": "^3.1.0",
    "pino-colada": "^1.4.4",
    "pino-http": "^4.2.0",
    "polished": "^3.2.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-apollo": "^2.5.4",
    "react-dom": "^16.8.6",
    "react-scroll": "^1.7.11",
    "typeface-raleway": "^0.0.54",
    "typography": "^0.16.19"
  },
  "devDependencies": {
    "acorn": "^6.1.1",
    "acorn-dynamic-import": "^4.0.0",
    "ava": "^1.4.1",
    "babel-eslint": "^10.0.1",
    "codecov": "^3.3.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-config-xo-react": "^0.19.0",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.6.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "mongomem": "^0.1.9",
    "nyc": "^14.0.0",
    "xo": "^0.24.0"
  },
  "xo": {
    "extends": [
      "xo-react"
    ],
    "space": true,
    "prettier": true,
    "parser": "babel-eslint",
    "overrides": [
      {
        "files": "models/*.js",
        "rules": {
          "unicorn/filename-case": [
            "error",
            {
              "case": "pascalCase"
            }
          ]
        }
      },
      {
        "files": "components/*.js",
        "globals": [
          "ga"
        ]
      }
    ]
  },
  "lint-staged": {
    "*.{js}": [
      "npx xo --fix",
      "git add"
    ]
  }
}
