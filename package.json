{
  "name": "focustas.org",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "flow": "flow",
    "dev": "nodemon --verbose index.js",
    "build": "next build",
    "start": "NODE_ENV=production node index.js",
    "test": "xo && nyc ava",
    "test:watch": "ava --watch",
    "precommit": "lint-staged",
    "report-coverage": "nyc report --reporter=lcov > coverage.lcov && codecov"
  },
  "dependencies": {
    "apollo-cache-inmemory": "^1.1.9",
    "apollo-client": "^2.2.5",
    "apollo-link-http": "^1.5.2",
    "babel-plugin-emotion": "^9.0.1",
    "classnames": "^2.2.5",
    "emotion": "^9.0.2",
    "emotion-server": "^9.0.2",
    "express": "^4.16.2",
    "express-graphql": "^0.6.12",
    "graphql": "^0.13.1",
    "graphql-compose": "^3.0.6",
    "graphql-compose-connection": "^3.0.0",
    "graphql-compose-mongoose": "^3.1.1n",
    "graphql-tag": "^2.8.0",
    "isomorphic-fetch": "^2.2.1",
    "keystone": "^4.0.0-beta.8",
    "lodash": "^4.17.5",
    "model-transform": "^2.0.0",
    "next": "^5.0.0",
    "pino-colada": "^1.4.4",
    "pino-http": "^3.2.0",
    "polished": "^1.9.2",
    "prop-types": "^15.6.1",
    "react": "^16.2.0",
    "react-apollo": "^2.0.4",
    "react-dom": "^16.2.0",
    "react-emotion": "^9.0.2",
    "react-redux": "^5.0.7",
    "react-scroll": "^1.7.7",
    "redux": "^3.6.0",
    "typeface-raleway": "^0.0.54",
    "typography": "^0.16.4"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-eslint": "^8.2.2",
    "codecov": "^3.0.0",
    "eslint-config-xo": "^0.20.1",
    "eslint-config-xo-react": "^0.16.0",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "mongomem": "^0.1.9",
    "nodemon": "^1.17.1",
    "nyc": "^11.5.0",
    "prettier": "^1.11.1",
    "webpack-bundle-analyzer": "^2.11.1",
    "xo": "^0.20.3"
  },
  "nodemonConfig": {
    "ignore": [
      ".next",
      "data",
      "pages",
      "lib",
      "components"
    ],
    "legacyWatch": true
  },
  "xo": {
    "extends": [
      "xo-react"
    ],
    "parser": "babel-eslint",
    "space": true,
    "overrides": [
      {
        "files": "models/*.js",
        "rules": {
          "unicorn/filename-case": [
            "error",
            {
              "case": "pascalCase"
            }
          ]
        }
      }
    ]
  },
  "lint-staged": {
    "*.{js}": [
      "npx xo --fix",
      "git add"
    ]
  }
}
